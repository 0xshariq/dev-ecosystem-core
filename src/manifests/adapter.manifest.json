{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Adapter Manifest",
  "description": "Manifest file for Orbyt workflow engine adapters",
  "type": "object",
  "required": ["namespace", "name", "version", "actions"],
  "properties": {
    "namespace": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique adapter namespace (e.g., 'shell', 'http', 'aws')"
    },
    "name": {
      "type": "string",
      "description": "Human-readable adapter name"
    },
    "displayName": {
      "type": "string",
      "description": "Display name for UI"
    },
    "description": {
      "type": "string",
      "description": "Adapter description"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version"
    },
    "author": {
      "type": "string",
      "description": "Author name or email"
    },
    "license": {
      "type": "string",
      "description": "License identifier"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Homepage URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source repository URL"
    },
    "category": {
      "type": "string",
      "enum": ["system", "cloud", "database", "messaging", "storage", "utility", "integration", "other"],
      "description": "Adapter category"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Searchable tags"
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*(\\.[a-z][a-z0-9-]*)*$",
            "description": "Action name (e.g., 'command', 's3.upload')"
          },
          "displayName": {
            "type": "string",
            "description": "Display name for UI"
          },
          "description": {
            "type": "string",
            "description": "Action description"
          },
          "parameters": {
            "type": "object",
            "description": "JSON Schema for action parameters"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "description": {"type": "string"},
                "yaml": {"type": "string"}
              }
            }
          }
        }
      },
      "description": "List of actions this adapter provides"
    },
    "requirements": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["linux", "darwin", "win32"]
          }
        },
        "dependencies": {
          "type": "array",
          "items": {"type": "string"},
          "description": "External dependencies required"
        },
        "permissions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required permissions"
        },
        "resources": {
          "type": "object",
          "properties": {
            "cpu": {"type": "string"},
            "memory": {"type": "string"},
            "storage": {"type": "string"}
          }
        }
      }
    },
    "configuration": {
      "type": "object",
      "description": "JSON Schema for adapter configuration"
    }
  }
}

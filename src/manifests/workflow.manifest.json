{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Manifest",
  "description": "Manifest file for published workflow templates",
  "type": "object",
  "required": ["id", "name", "version", "workflow"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique workflow template identifier"
    },
    "name": {
      "type": "string",
      "description": "Workflow name"
    },
    "displayName": {
      "type": "string",
      "description": "Display name for UI"
    },
    "description": {
      "type": "string",
      "description": "Workflow description"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version"
    },
    "author": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": ["automation", "deployment", "testing", "monitoring", "data-processing", "integration", "infrastructure", "other"]
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "icon": {
      "type": "string",
      "description": "Icon identifier"
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {"type": "string"},
          "displayName": {"type": "string"},
          "description": {"type": "string"},
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "array", "object"]
          },
          "required": {"type": "boolean"},
          "default": {}
        }
      },
      "description": "Template variables that can be customized"
    },
    "workflow": {
      "type": "object",
      "description": "Workflow definition (may contain template variables)"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"},
          "variables": {"type": "object"}
        }
      },
      "description": "Usage examples with variable values"
    },
    "requirements": {
      "type": "object",
      "properties": {
        "adapters": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required adapters"
        },
        "plugins": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required plugins"
        },
        "secrets": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required secrets"
        }
      }
    },
    "documentation": {
      "type": "object",
      "properties": {
        "readme": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    }
  }
}
